<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="quadroteam.qt.LevelActivity"
    android:id="@+id/root"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18pt"
        android:text="Меню"
        android:textColor="#0051ff"
        android:layout_gravity="center"
        android:textSize="30sp"

        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 1 -\n Что такое СС?"
        android:clickable="true"
        android:layout_gravity="center"
        android:id="@+id/lvl1"
        android:textSize="14sp"
        android:onClick="startLVL"
        android:textColor="#ff0004"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 2 -\n Счет в СС"
        android:id="@+id/lvl2"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#ff0004"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 3 - \nПереводить из 10-ой СС"
        android:id="@+id/lvl3"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#7700ff"
        android:background="@drawable/button"
        />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 4 -\n Перевод в СС больше 10"
        android:id="@+id/lvl4"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#7700ff"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 5 -\n В 10-ю СС из других"
        android:id="@+id/lvl5"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#f57c00"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 6 -\n Кратные СС"
        android:id="@+id/lvl6"
        android:clickable="false"
        android:textColor="#f57c00"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 7 -\n Сложение"
        android:id="@+id/lvl7"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#00ff48"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 8 -\n Вычитание"
        android:id="@+id/lvl8"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="#00ff48"
        android:background="@drawable/button"
        />

</LinearLayout>
