<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    android:background="#9AE4F1"
    tools:context="quadroteam.qt.LevelActivity">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 1 - Что такое СС?"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/lvl1"
        android:textSize="14sp"
        android:background="#9AE4F1"
        android:onClick="startLVL"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 2 - Счет в СС"
        android:id="@+id/lvl2"
        android:clickable="false"
        android:background="#9AE4F1"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Level 3 - Как переводить из 10-ой СС"
        android:id="@+id/lvl3"
        android:clickable="false"
        android:background="#9AE4F1"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 4 - Перевод в СС больше 10"
        android:id="@+id/lvl4"
        android:clickable="false"
        android:onClick="startLVL"
        android:background="#9AE4F1"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:background="#9AE4F1"
        android:layout_height="wrap_content"
        android:text="Уровень 5 - Перевод в 10-ю СС из других"
        android:id="@+id/lvl5"
        android:clickable="false"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 6 - Перевод в кратные СС"
        android:id="@+id/lvl6"
        android:clickable="false"
        android:onClick="startLVL"
        android:background="#9AE4F1"
        android:layout_weight="1"
        android:textSize="14sp"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 7 - Сложение"
        android:id="@+id/lvl7"
        android:clickable="false"
        android:onClick="startLVL"
        android:layout_weight="1"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_below="@+id/lvl6"
        android:background="#9AE4F1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 8 - Вычитание"
        android:id="@+id/lvl8"
        android:clickable="false"
        android:onClick="startLVL"
        android:background="#9AE4F1"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 9 - Умножение"
        android:id="@+id/lvl9"
        android:clickable="false"
        android:onClick="startLVL"
        android:background="#9AE4F1"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Уровень 10 - Деление"
        android:id="@+id/lvl10"
        android:clickable="false"
        android:background="#9AE4F1"
        android:onClick="startLVL"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

</LinearLayout>
