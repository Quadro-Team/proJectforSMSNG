<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="quadroteam.qt.TaskActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Задание"
        android:textSize="40sp"
        android:textColor="#000"
        android:gravity="center"
        android:id="@+id/textExercise"
        android:layout_weight="16" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:inputType="numberDecimal"
        android:id="@+id/textAnswer"
        android:textSize="25sp"
        android:gravity="center"
        android:hint="Пиши ответ сюда"
        android:layout_weight="4"/>
    <Button
        android:layout_width="355dp"
        android:layout_height="74sp"
        android:text="Ответить"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:onClick="checkAnswer"
        android:background="@drawable/button"
        android:id="@+id/check" />

    <Button
        android:layout_width="355sp"
        android:layout_height="74sp"
        android:text="Следующий"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:onClick="nextExercise"
        android:id="@+id/next" />

</LinearLayout>